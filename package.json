{
  "name": "auto-price-oracle",
  "private": true,
  "version": "0.0.0",
  "description": "Auto Price Oracle - Car Listing Analysis Tool",
  "engines": {
    "node": "18.x",
    "npm": "10.x"
  },
  "scripts": {
    "build:frontend": "vite build",
    "build:backend": "tsc -P tsconfig.server.json",
    "build": "npm run build:frontend && npm run build:backend",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "ts-node -P tsconfig.server.json src/server.ts",
    "server:dev": "nodemon --exec ts-node -P tsconfig.server.json src/server.ts",
    "frontend": "vite",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "install-all": "npm install && cd auto-price-oracle-backend && npm install",
    "heroku-postbuild": "npm run build",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-select": "^2.2.0",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@reduxjs/toolkit": "^2.7.0",
    "@tanstack/react-query": "^5.24.1",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.494.0",
    "mongoose": "^8.13.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.55.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.22.3",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vite": "^5.0.12"
  }
}
